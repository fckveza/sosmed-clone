// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // contoh: file:./dev.db
}

model User {
  id           String   @id @default(cuid())
  phone        String   @unique
  passwordHash String
  name         String?
  avatarUrl    String?

  // --- Wallet ---
  saldo        Int      @default(0)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Otp {
  id        String   @id @default(cuid())
  phone     String
  purpose   String
  codeHash  String
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([phone, purpose, createdAt])
}
